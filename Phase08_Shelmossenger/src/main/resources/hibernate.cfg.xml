<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- Connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/shelmossenger</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">1234</property>

        <!-- SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>

        <!-- Print executed SQL to stdout -->
        <property name="show_sql">true</property>

        <!-- Update database on startup -->
        <property name="hibernate.hbm2ddl.auto">create-drop</property>
        <mapping class="ir.shelmossenger.model.Permission" />
        <mapping class="ir.shelmossenger.model.User" />
        <mapping class="ir.shelmossenger.model.ChatType" />
        <mapping class="ir.shelmossenger.model.Chat" />
        <mapping class="ir.shelmossenger.model.UserChat" />
        <mapping class="ir.shelmossenger.model.UserChatPermission" />
        <mapping class="ir.shelmossenger.model.MessageType" />
        <mapping class="ir.shelmossenger.model.Message" />
        <mapping class="ir.shelmossenger.model.ReadMessage" />
        <mapping class="ir.shelmossenger.model.ProfileImage" />

    </session-factory>
</hibernate-configuration>